<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MasterPaige.Views.Poroda2">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="Center" Margin="20">
            <Image Source="Resources/drawable/angliiskiibuldog.jpg"></Image>
            <Label Text="Английский бульдог" Font="24" TextColor="DarkRed" HorizontalTextAlignment="Center"></Label>
            <Label Text="Насколько известно, бульдог происходит с Британских островов, а название его (буквально «бычья собака») связано с использованием этих собак при травле быков." TextColor="Black" HorizontalTextAlignment="Center"></Label>
            <Button x:Name="btn" Text="Подробнее(URL)" BackgroundColor="#00DA5E" Clicked="btn_Clicked">
            </Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>