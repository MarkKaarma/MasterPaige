<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MasterPaige.Views.Poroda8">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="Center" Margin="20">
            <Image Source="Resources/drawable/sharp.jpg"></Image>
            <Label Text="Шарпей" Font="24" TextColor="DarkRed" HorizontalTextAlignment="Center"></Label>
            <Label Text="На фото шарпеи выглядят добряками и увальнями, но на самом деле они хорошие защитники и сторожа. Эти собаки умеренно активны, не нуждаются в больших пространствах и могут жить в квартире." TextColor="Black" HorizontalTextAlignment="Center"></Label>
            <Button x:Name="btn" Text="Подробнее(URL)" BackgroundColor="#00DA5E" Clicked="btn_Clicked">
            </Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>